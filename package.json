{
  "name": "waveform-audio-player",
  "version": "1.0.0",
  "description": "HTML5 Audio Player",
  "author": "Bernie Sumption <bernie@berniecode.com> (http://berniesumption.com/)",
  "scripts": {
    "build": "npm-run-all build:clean build:demofile build:ts build:theme",
    "build:clean": "rimraf tmp-build",
    "build:demofile": "copy \"src/demo/**/*\" tmp-build",
    "build:ts": "tsc -p src",
    "build:browserify": "browserify tmp-build/js/init.js --outfile tmp-build/waveform-player.js",
    "build:theme": "lessc --no-ie-compat src/waveform-player.less tmp-build/waveform-player.css",
    "test": "tslint -c tslint.json -p src"
  },
  "dependencies": {},
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BernieSumption/waveform-audio-player.git"
  },
  "private": true,
  "devDependencies": {
    "browserify": "^14.4.0",
    "copy": "^0.3.1",
    "less": "^2.7.2",
    "npm-run-all": "^4.1.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "uglify-es": "^3.1.0"
  }
}
